%h1 New Trip
- if flash[:error].present?
  .error= flash[:error]
= form_for @trip do |f|
  %div
    = f.label :name
    = f.text_field :name
  %div
    = f.label :date
    = f.date_select :date
  %div
    = f.label :hotel_id, "Hotel"
    = f.collection_select(:hotel_id, @hotels, :id, :name)
  = f.submit "Save"
